# Node service configuration
WEB_AI_PORT=8001
WEB_AI_HOST=0.0.0.0

# Identity
WEB_AI_NODE_ID=default
WEB_AI_NODE_NAME=default

# Security: require head-signed JWTs by default. Set to false for quick local runs.
WEB_AI_NODE_REQUIRE_AUTH=true
# Trusted head public key path(s) or inline PEM; comma-separated allowed
WEB_AI_HEAD_PUBLIC_KEYS=/app/head-keys/head_public.pem

# OpenAI credentials
WEB_AI_OPENAI_API_KEY=sk-...
# WEB_AI_OPENAI_MODEL=gpt-5-mini

# VNC / browser defaults
WEB_AI_VNC_HTTP_PORT=6180
WEB_AI_VNC_TCP_PORT=5902
WEB_AI_VNC_PUBLIC_HOST=localhost

# Paths are relative to the container working dir by default
WEB_AI_BASE_DATA_DIR=./data

# Optional: disable auth to let nodes start without a head key (local only)
# WEB_AI_NODE_REQUIRE_AUTH=false
