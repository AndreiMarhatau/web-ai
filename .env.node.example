# Node service configuration
APP_PORT=8001
APP_HOST=0.0.0.0

# Identity
NODE_ID=default
NODE_NAME=default

# Security: require head-signed JWTs by default. Set to false for quick local runs.
NODE_REQUIRE_AUTH=true
# Trusted head public key path(s) or inline PEM; comma-separated allowed
HEAD_PUBLIC_KEYS=/app/head-keys/head_public.pem
# One-time enrollment token to allow the head to push its public key here
NODE_ENROLL_TOKEN=changeme

# OpenAI credentials
OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-5-mini

# VNC / browser defaults
VNC_HTTP_PORT=6180
VNC_TCP_PORT=5902
VNC_PUBLIC_HOST=localhost
VNC_TARGET_HOST=localhost
RESOLUTION_WIDTH=1920
RESOLUTION_HEIGHT=1080
HEADLESS=false

# Paths are relative to the container working dir by default; in Compose this maps to the node_data volume
BASE_DATA_DIR=/app/web-ai/data

# Optional: disable auth to let nodes start without a head key (local only)
# NODE_REQUIRE_AUTH=false
